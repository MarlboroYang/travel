<h1>各國介紹</h1>
<%= current_user.name %>
<%= link_to "新增看版", new_board_path %>

<ul>
<% @boards.each do |board|%>
<li>
<%= link_to board.title, board %>
<%= link_to "編輯", edit_board_path(board) %>
<%= link_to "刪除", board, method: 'delete', data: { confirm: "確認刪除嗎？" } %>

<%= link_to "隱藏", hide_board_path(board), method: 'patch' if check?(board, :hide) %>

<%= link_to "開放", open_board_path(board), method: 'patch' if  check?(board, :open) %>

<%= link_to "鎖定", lock_board_path(board), method: 'patch' if check?(board, :lock) %>

</li>
<% end %>
</ul>
